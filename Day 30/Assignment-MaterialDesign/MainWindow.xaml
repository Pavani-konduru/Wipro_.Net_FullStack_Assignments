<Window x:Class="Day_30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day_30"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- Menu -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Dashboard" Click="DashboardMenuItem_Click"/>
                <MenuItem Header="Employee">
                    <MenuItem Header="Create" Click="CreateMenuItem_Click"/>
                    <MenuItem Header="Edit" Click="EditMenuItem_Click"/>
                    <MenuItem Header="View" Click="ViewMenuItem_Click"/>
                </MenuItem>
            </Menu>

            <!-- Frame for page navigation -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>
