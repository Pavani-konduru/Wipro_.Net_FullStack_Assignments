<Page x:Class="Day_30.ViewEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Day_30"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewEmployeePage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Employee ID:" Margin="5"/>
            <TextBox x:Name="EmployeeIDTextBox" Width="200" Margin="5"/>
            <Button Content="Submit" Click="SubmitButton_Click" Margin="5"/>
            <TextBlock x:Name="EmployeeDetailsTextBlock" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
