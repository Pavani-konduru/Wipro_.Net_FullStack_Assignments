@model IEnumerable<EmployeeManagementLogin.Models.Employee>

<h2>Employees</h2>

<a asp-action="Create" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date Of Birth</th>
            <th>Country</th>
            <th>Address</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToShortDateString()</td>
                <td>@employee.Country</td>
                <td>@employee.Address</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a>
                    <form asp-action="Delete" asp-route-id="@employee.EmployeeID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-link">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>