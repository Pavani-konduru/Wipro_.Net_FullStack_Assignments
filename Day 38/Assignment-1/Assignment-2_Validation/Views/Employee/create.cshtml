@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Employee</h2>

@using (Html.BeginForm("Create", "Employee", FormMethod.Post))
{
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })
                @Html.LabelFor(m => m.FirstName)
            </div>
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                @Html.LabelFor(m => m.MiddleName)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
                @Html.LabelFor(m => m.LastName)
            </div>
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", type = "number" })
                @Html.LabelFor(m => m.Salary)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                @Html.LabelFor(m => m.PhoneNumber)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                @Html.LabelFor(m => m.Email)
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.LabelFor(m => m.Address)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating">
                @Html.DropDownListFor(m => m.Country, new SelectList(new[] { "USA", "CAN", "UK", "AUS", "IND" }), "Select your country", new { @class = "form-select" })
                @Html.LabelFor(m => m.Country)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
                @Html.LabelFor(m => m.Age)
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="form-floating">
                @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", type = "date" })
                @Html.LabelFor(m => m.DateOfBirth)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
