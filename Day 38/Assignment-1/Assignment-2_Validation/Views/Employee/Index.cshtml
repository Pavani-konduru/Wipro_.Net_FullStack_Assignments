@model IEnumerable<EmployeeManagement.Models.Employee>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Email</td>
                <td>
                    <a asp-action="View" asp-route-id="@employee.EmployeeID" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@employee.EmployeeID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
